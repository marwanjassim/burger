<div class="container my-3">
    <div class="row mb-3">
        <div class="col-12 text-center">
            <div class="display-1">🍔</div>
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <h2>Uneaten</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless completed}}
                <li class="list-group-item">
                    <span>#{{ id }}: {{ burger_name }}</span>
                    <form action="/devour/{{ id }}" class="float-right" method="POST">
                        <button type="submit" class="btn btn-primary">Devour</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Eaten</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if completed}}
                <li class="list-group-item disabled">
                    <p>#{{ id }}: {{ burger_name }}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <h3>Add a burger</h3>
            <form action="/add" method="POST">
                <div class="form-group">
                    <label for="burgerName">Burger Name</label>
                    <input type="text" class="form-control" id="burgerName" placeholder="Burger Name" name="name">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>